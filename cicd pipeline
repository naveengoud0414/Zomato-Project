pipeline {
    agent any
    tools {
        jdk 'jdk17'
        nodejs 'nodejs'
    }
    environment {
        SCANNER_HOME = tool 'sonar'
    }
    stages {
        stage("Clean WS") {
            steps {
                cleanWs()
            }
        }
        stage("Checkout Code") {
            steps {
                git "https://github.com/naveengoud0414/Zomato-Project.git"
            }
        }
        stage("Sonarqube Analysis") {
            steps {
                withSonarQubeEnv('sonar') {
                    sh """
                    $SCANNER_HOME/bin/sonar-scanner \
                    -Dsonar.projectName=zomato \
                    -Dsonar.projectKey=zomato
                    """
                }
            }
        }
        stage("Install Dependencies") {
            steps {
                sh 'npm install'  // Fix spelling mistake "instal" -> "install"
            }
        }
        stage("OWASP Dependency Check") {
            steps {
                dependencyCheck additionalArguments: '--scan ./ --disableYarnAudit --disableNodeAudit', 
                                odcInstallation: 'Dependency-Check'
            }
        }
        stage("Trivy File System Scan") {
            steps {
                sh 'trivy fs . > trivyfs.txt'
            }
        }
        stage("Build Docker Image") {
            steps {
                sh 'docker build -t image1 .'
            }
        }
        stage("Scan Docker Image") {
            steps {
                sh 'trivy image dockernaveen04/mydockerproject:myzomatoimage'
            }
        }
        stage("Tag & Push Docker Image") {
            steps {
                        sh 'docker login -u dockernaveen04 -p Naveen@0414'
                        sh 'docker tag image1 dockernaveen04/mydockerproject:myzomatoimage'
                        sh 'docker push dockernaveen04/mydockerproject:myzomatoimage'
                    }
                }
       
        stage("Run Container") {
            steps {
                sh 'docker run -d --name cont1 -p 3000:3000 dockernaveen04/mydockerproject:myzomatoimage'
            }
        }
    }
}
